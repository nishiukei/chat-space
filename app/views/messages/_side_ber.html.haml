.side_ber
  .side_ber__top
    .side_ber__top__items
      %p.side_ber__top__items--name
        %b
          = current_user.name
      %p.side_ber__top__items--icon
        = link_to new_group_path(), class: "awesome" do
          = icon("far", "edit")
          %span<>
        = link_to edit_user_path(current_user), class: "awesome" do
          = icon("fas", "cog")
  .side_ber__group
    .side_ber__group__list
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            %p.side_ber__group__list__name
              = group.name
            %p.side_ber__group__list__notice
              = group.show_last_message